<%= form_for(@grade) do |f| %>
  <%= f.label 'Student ID' %>
  <%= f.number_field :user_id, class: 'form-control' %>

  <%= f.label 'Course ID' %>
  <%= f.number_field :course_id, class: 'form-control' %>

  <%= f.label 'Grade value: * A=4, B=3, C=2, D=1, F=0' %>
  <%= f.number_field :grade_value, class: 'form-control' %>

  <%= f.submit 'Assign Grade', class: 'btn btn-success' %>
<% end %>
<%= link_to 'Back', current_user %>
