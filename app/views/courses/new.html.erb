<% provide(:title, 'New Course') %>
<h1 class="center">New Course</h1>

<div class="row">
  <div class="col-md-4 col-md-offset-1">
    <h3>Teachers Key</h3>
    <table class="table">
      <tr>
        <td>ID</td>
        <td>Name</td>
      </tr>
      <% @teachers.each do |t| %>
        <tr>
          <td><%= t.id  %></td>
          <td><%= t.name%></td>
        </tr>
      <% end %>
    </table>
  </div>
  <div class="col-md-6">
    <%= form_for(@course) do |f| %>

      <%= f.label :user_id %>
      <%= f.number_field :user_id, class: "form-control" %>

      <%= f.label :title %>
      <%= f.text_field :title, class: "form-control" %>

      <%= f.label :start_date %>
      <%= f.datetime_field :start_date, class: "form-control" %>

      <%= f.label :end_date %>
      <%= f.datetime_field :end_date, class: "form-control" %>

      <%= f.submit "Add Course", class: "btn btn-primary" %>
    <% end %>
    <%= link_to 'Back', current_user  %>
  </div>
</div>
