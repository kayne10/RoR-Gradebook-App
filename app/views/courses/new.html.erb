<% provide(:title, 'New Course') %>
<h1 class="center">New Course</h1>

<div class="row">
  <div class="col-md-4 col-md-offset-1">
    <h3>Teachers Key</h3>
    <table class="table">
      <tr>
        <td>ID</td>
        <td>Name</td>
      </tr>
      <% @teachers.each do |t| %>
        <tr>
          <td><%= t.id  %></td>
          <td><%= t.name%></td>
        </tr>
      <% end %>
    </table>
    <h3>Semester Key</h3>
    <table class="table">
      <tr>
        <td>ID</td>
        <td>Term</td>
      </tr>
      <% @semesters.each do |s|  %>
        <tr>
          <td><%= s.id %></td>
          <td><%= s.title %></td>
        </tr>
      <% end %>
    </table>
  </div>
  <%= render 'form' %>
</div>
