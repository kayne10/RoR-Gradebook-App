<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-1">
      <h2 class="center">My Courses</h2>
      <!-- table of teachers courses with ID -->
      <table class="table">
        <tr>
          <td>Course ID</td>
          <td>Title</td>
          <td>Semester ID</td>
        </tr>
        <% @courses.each do |course| %>
          <tr>
            <td><%= course.id %></td>
            <td><%= course.title %></td>
            <td><%= course.semester_id %></td>
          </tr>
        <% end %>
      </table>
    </div>
    <div class="col-md-6">
      <h1 class="center">Enroll Student to Course</h1>
      <%= form_for(@enrollment) do |f| %>
        <%= f.label :course_id %>
        <%= f.number_field :course_id  %>

        <%= f.label 'Student ID' %>
        <%= f.number_field :user_id  %>

        <%= f.label :semester_id %>
        <%= f.number_field :semester_id  %>

        <%= f.submit 'Enroll Student', class: 'btn btn-success' %>
      <% end %>
      <%= link_to 'Back', current_user %>
    </div>
  </div>
</div>
